<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imageViewDetailsBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3" />

        <LinearLayout
            android:alpha=".8"
            android:background="#f5f2f2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="40dp">
            <TextView

                android:id="@+id/textViewSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comiler"
                android:background="@drawable/text_view_details"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="30dp"
                android:textColor="#fff"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="6">

                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="year"
                        style="@style/detailsFragment"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Group"
                        style="@style/detailsFragment"/>
                    <TextView
                        android:id="@+id/section"
                        android:layout_width="match_parent"
                        android:text="section"
                        style="@style/detailsFragment"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Hall"
                        style="@style/detailsFragment"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Day"
                        style="@style/detailsFragment"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Beginning Time"
                        style="@style/detailsFragment"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="end Time"
                        style="@style/detailsFragment"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="|"
                    android:textColor="#000"
                    android:background="#000"/>
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textViewYear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3"
                        style="@style/detailsFragment"/>
                    <TextView
                        android:id="@+id/textViewGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CS"
                        style="@style/detailsFragment"/>
                    <TextView
                        android:id="@+id/textViewSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2"
                        style="@style/detailsFragment"/>
                    <TextView
                        android:id="@+id/textViewHall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="lap 6"
                        style="@style/detailsFragment"/>
                    <TextView
                        android:id="@+id/textViewDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sunday"
                        style="@style/detailsFragment"/>
                    <TextView
                        android:id="@+id/textViewBegin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.30"
                        style="@style/detailsFragment"/>
                    <TextView
                        android:id="@+id/textViewEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4.30"
                        style="@style/detailsFragment"
                        />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</ScrollView>